<Window x:Class="GameTranslaterUI.WindowTrans"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameTranslaterUI"
        mc:Ignorable="d"
        Title="WindowTrans" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="171*"/>
            <RowDefinition Height="172*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" Margin="10,0,0,10" TextWrapping="Wrap" Text="TextBox" Height="67" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="219" Grid.Row="1"/>
        <DataGrid x:Name="dataGrid" Margin="234,31,10,10" Grid.RowSpan="2"/>
        <Menu x:Name="menu" Margin="10,10,10,0" Height="16" VerticalAlignment="Top">
            <MenuItem Header="Test">
                <MenuItem Command="ApplicationCommands.Copy"/>
            </MenuItem>
        </Menu>
        <Button x:Name="button_Export" Content="输出至文件" HorizontalAlignment="Left" Margin="21,41,0,0" VerticalAlignment="Top" Width="75" Click="button_Export_Click" Height="20" Grid.Row="1"/>
        <Button x:Name="button_Import" HorizontalAlignment="Left" Margin="21,16,0,0" VerticalAlignment="Top" Width="75" Click="button_Import_Click" Height="20" Content="从文件导入" Grid.Row="1"/>
        <ListView ItemsSource="{Binding}" x:Name="listView_Plugs" SelectionChanged="listView_Plugs_SelectionChanged" Margin="10,31,563,19">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"  Width="30" />
                    <GridViewColumn Header="属性" DisplayMemberBinding="{Binding Name}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
